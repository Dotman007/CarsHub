@model IEnumerable<CarsHub.Models.Car>

@{
    ViewBag.Title = "OrderedCar";
    Layout = "~/Views/Shared/_LayoutDealer.cshtml";
}
@if(Model.Count() == 0)
{
<br />
<br />
<br />
<h3 style="text-align:center">No Ordered Car</h3>
}
else
{

    <h2 style="text-align: center; font-weight: bolder; color: royalblue">Ordered Cars</h2>

<h3 class="badge">Total Orders: @Model.Count()</h3>
    <table class="table table-striped table-bordered table-hover" style="color:royalblue">
        <tr>
            <th>
                Brand
            </th>
            <th>
                Company
            </th>
            <th>
                Model
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Milage)
                </th>*@


            <th>
                Year
            </th>
            <th>Condition
            </th>
            <th>
                Image
            </th>
            <th>
                Price
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Book)
                </th>*@
            <th>
                Name
            </th>
            <th>
                Telephone
            </th>

            <th>
                Address
            </th>

            <th>
                Time 
            </th>

            <th>
                Date 
            </th>
            @*<th>

                </th>*@
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand.Brand_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dealer.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarModel)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Milage)
                    </td>*@


                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condition)
                </td>
                <td>

                    <img src="@string.Format("/Uploads/{0}",@item.FrontView)" alt="@item.FrontView" class="span12" style="height:80px;width:80px" />
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Price)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Book)
                    </td>*@

                <td>


                    @Html.DisplayFor(modelItem => item.Customer.UserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Telephone)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Address)
                </td>
                <td>
                    @string.Format("{0:T}", item.BookedDate)
                </td>
                <td>
                    @string.Format("{0:D}", item.BookedDate)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.CarId }) |
                        @Html.ActionLink("Details", "Details", new { id=item.CarId }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.CarId })
                    </td>*@
            </tr>
        }

    </table>
}