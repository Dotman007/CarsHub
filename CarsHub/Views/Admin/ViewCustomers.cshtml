@model IEnumerable<CarsHub.Models.Customer>

@{
    ViewBag.Title = "ViewCustomers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">List of Customers</h2>
<br />
<div>
    <h3 style="text-align:right" class="badge">
        @Model.Count() Customers
    </h3>
</div><br />
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table table-bordered table-striped" style="color: #b200ff;font-weight:bolder">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Country.CountryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Password)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                <a href="/Customer/Edit/@item.CustomerId" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span>Edit</a>
                <a href="/Customer/Details/@item.CustomerId" class="btn btn-info"><span class="glyphicon glyphicon-adjust"></span>Details</a>
                <a href="/Customer/Delete/@item.CustomerId" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>Delete</a>

                @*@Html.ActionLink("Edit", "Edit", new { id=item.CustomerId }) |
                    @Html.ActionLink("Details", "Details", new { id=item.CustomerId }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.CustomerId })*@
            </td>
        </tr>
}

</table>
